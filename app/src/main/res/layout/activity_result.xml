<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <ImageView
        android:background="#f7f6f6"
        android:id="@+id/outputImageView"
        android:layout_below="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ly"/>

    <LinearLayout
        android:id="@+id/ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <Button
            android:textColor="@color/colorAccent"
            android:background="#04252D"
            android:layout_marginLeft="0.5dp"
            android:layout_weight="1"
            android:id="@+id/backTtoI"
            android:text="Back"
            android:onClick="backforTtoI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/colorAccent"
            android:background="#04252D"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:id="@+id/saveToI"
            android:text="save"
            android:onClick="saveforTtoI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/colorAccent"
            android:background="#04252D"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1"
            android:id="@+id/share"
            android:text="share"
            android:onClick="shareforTtoI"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>